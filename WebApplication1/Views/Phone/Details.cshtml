@model Phone
@{
    ViewBag.Title = "Details";
}

<div class="col-9">
    <h2>Show Phone</h2>
    @if (Model != null)
    {
        <div class="container">
                <ul class="list-group">
                    <li class="list-group-item"><strong>ID: </strong>@Model.Id</li>
                    <li class="list-group-item"><strong>Name: </strong>@Model.Name</li>
                    <li class="list-group-item"><strong>Surname: </strong>@Model.Price</li>
                    <li class="list-group-item"><strong>About: </strong>@Model.Company</li>
                    <li class="list-group-item"><strong>Age: </strong>@Model.CameraCount</li>
                </ul>
        </div>
    }
    else
    {
        <h3>Phone not found</h3>
    }
</div>
<div class="pt-5">
    <a asp-action="GetFile" asp-controller="Phone" asp-route-phoneName="@Model.Name">Download</a>
</div>