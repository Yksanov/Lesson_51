@model List<Phone>

@{
    ViewBag.Title = "All Phones";
}

<h2>All Phones</h2>
<p><a asp-action="Create">Add new Phone</a></p>
@if (Model != null && Model.Count != 0)
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Company</th>
            <th scope="col">Price</th>
            <th scope="col">Camera Count</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
    {
        <tr>
            <th scope="row">@p.Name</th>
            <td>@p.Company</td>
            <td>@p.Price</td>
            <td>@p.CameraCount</td>
            <td><a asp-action="Details" asp-route-id="@p.Id">Details</a></td>
            <td><a asp-action="Create" asp-controller="Order" asp-route-id="@p.Id">Make Order</a></td>
            <td><a asp-action="Test" asp-controller="Phone" asp-route-company="@p.Company"><button class="btn btn-primary">Redirects</button></a></td>
        </tr>
    }
    </tbody>
    </table>
}
else
{
    <h3>Нету телефона пока!</h3>
}
